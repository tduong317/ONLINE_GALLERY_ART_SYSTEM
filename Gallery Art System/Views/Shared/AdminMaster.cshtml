                            <li class="nav-item">
                                <a href="/bid" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Bids</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!--end dropdown cho auction và bid-->
                
                    <!--//chức năng phụ logout-->
                    @{
                        var currentPath = Context.Request.Path.Value?.ToLower();
                        var isUserSection = currentPath.Contains("/home/index")
                        || currentPath.Contains("/changepassword")
                        || currentPath.Contains("/login/logout");
                    }

                    <li class="nav-item has-treeview @(isUserSection ? "menu-open" : "")">
                        <a href="#" class="nav-link @(isUserSection ? "active" : "")">
                            <i class="nav-icon fas fa-user"></i>
                            <p>
                                User Account
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>

                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link @(currentPath.Contains("/home/index") ? "active" : "")">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Home Client</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/changepassword" class="nav-link @(currentPath.Contains("/changepassword") ? "active" : "")">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Change Password</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Login" asp-action="Logout" class="nav-link @(currentPath.Contains("/login/logout") ? "active" : "")">
                                    <i class="fa-solid fa-right-from-bracket nav-icon"></i>
                                    <p>Logout</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!--end chức năng-->
                </ul>
            </nav>
        </aside>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
    <div class="content-wrapper" style="margin-left: 300px">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                @RenderBody()
                @section Scripts {
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                    }
                }
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>


</body>

</html>