<header>
    <!-- Top info bar -->
    <div class="top-info-bar">
        @foreach (var cf in ViewBag.Config)
        {
            <div class="container d-flex justify-content-between align-items-center">
                <div class="left-info">
                    <i class="bi bi-clock me-2"></i>
                    <span>
                        @cf.SocialLink2
                    </span>
                </div>
                <div class="right-info d-flex align-items-center">
                    <div class="me-4">
                        <i class="bi bi-geo-alt me-1"></i><span>@cf.Contact</span>
                    </div>
                    <div class="me-4">
                        <i class="bi bi-envelope-fill me-1"></i><span>@cf.Mail</span>
                    </div>

                </div>
            </div>
        }
    </div>

    <!-- Navbar chính -->
    <nav id="mainHeader" class="navbar navbar-expand-sm overlay-nav fixed-top transparent">
        <div class="container">
            <ul class="navbar-nav left-nav">
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Artwork" asp-controller="Home">Artwork</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Exhibition" asp-controller="Home">Exhibtion</a></li>    
                <li class="nav-item"><a class="nav-link" asp-action="Auction" asp-controller="Home">Auction</a></li>
            </ul>
            @foreach (var cf in ViewBag.Config)
            {
                <a class="navbar-brand logo-center" href="/">
                    <img src="@cf.Image" alt="Logo" class="logo-img">
                </a>
            }
            <ul class="navbar-nav right-nav">          
                <li class="nav-item"><a class="nav-link" asp-action="About" asp-controller="Home">About Us</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Contact" asp-controller="Home">Contacts</a></li>
                @if (Context.Session.GetString("FullName") != null)
                {
                    <div class="menu-user dropdown">
                        <span class="dropdown-toggle">@Context.Session.GetString("FullName")</span>
                        <div class="dropdown-menu">
                            <a href="@Url.Action("Profile", "User")">Profile</a>
                            <a href="@Url.Action("Logout", "User", new { returnUrl = Context.Request.Path })">Logout</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="login">
                        <button class="btn btn-dark px-4 rounded-pill"
                                onclick="window.location.href='@Url.Action("Login", "User", new { returnUrl = Context.Request.Path })'">
                            Login
                        </button>
                    </div>
                }
                <li class="nav-item ms-3">
                    <a class="nav-link position-relative" asp-action="Index" asp-controller="Cart">
                        <i class="bi bi-cart3 fs-4"></i>
                        <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        fetch('/Cart/GetCartCount')
            .then(response => response.json())
            .then(data => {
                const cartCount = document.getElementById('cartCount');
                if (cartCount) {
                    cartCount.textContent = data.count;
                }
            })
            .catch(err => console.error('Error fetching cart count:', err));
    });
</script>

