﻿@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Gallery_Art_System.Models.GalleryArtwork>
@{
    Layout = "AdminMaster";
    ViewData["Title"] = "Gallery Artwork Management";
}

<div class="container-fluid">
    <h4>Gallery Artwork <b>Management</b></h4>
    <div class="table-wrapper" style="text-align:center;">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6"></div>
                <div class="col-sm-6 text-end">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="material-icons">&#xE147;</i> <span>Add</span>
                    </a>                  
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fa-solid fa-arrows-rotate"></i> <span>Refresh</span>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-success">
                <tr>
                    <th>
                        <span class="custom-checkbox">
                            <!-- "Select All" checkbox -->
                            <input type="checkbox" id="selectAll" />
                            <label for="selectAll"></label>
                        </span>
                    </th>
                    <th>Gallery</th>
                    <th>Artwork</th>
                    <th>Create Date</th>
                    <th>Function</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="custom-checkbox">
                                <!-- Individual checkboxes -->
                                <input type="checkbox" class="checkboxItem" id="checkbox_@item.GalleryId" name="options[]" value="@item.GalleryId" />
                                <label for="checkbox_@item.GalleryId"></label>
                            </span>
                        </td>
                        <td>@item.Gallery?.Name</td>
                        <td>@item.Artwork?.Title</td>
                        <td>@item.AddedAt?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit"
                               asp-route-galleryId="@item.GalleryId"
                               asp-route-artworkId="@item.ArtworkId"
                               class="edit" title="Chỉnh sửa">
                                <i class="material-icons">&#xE254;</i>
                            </a>
                            <a asp-action="Delete"
                               asp-route-galleryId="@item.GalleryId"
                               asp-route-artworkId="@item.ArtworkId"
                               onclick="return confirm('Bạn có chắc muốn xóa không?');"
                               class="delete" title="Xóa">
                                <i class="material-icons">&#xE872;</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="clearfix">
            <ul class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page }))
            </ul>
        </div>
    </div>
</div>