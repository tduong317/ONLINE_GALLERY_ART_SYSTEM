@model Gallery_Art_System.Models.Contact
@{
    ViewData["Title"] = "Contact";
}

<!-- Banner -->
<div class="banner-ex">
    <h1>Contacts</h1>
    <p><a href="/">Home </a>/<a asp-controller="Home" asp-action="Contact"> Contacts</a></p>
</div>

<!-- Contact Form -->
<section class="container py-5" style="max-width: 900px;">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Get In Touch With Us</h2>
        <hr style="width: 120px; margin: 10px auto; border-top: 2px solid #000;" />
        <p class="text-muted">
            Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.
        </p>
    </div>

    <form asp-action="Contact" method="post" class="contact-form">
        @Html.AntiForgeryToken()

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <input asp-for="Name" class="form-control rounded-pill p-3" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <input asp-for="Email" class="form-control rounded-pill p-3" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
        </div>
        <div class="mb-3">
            <input asp-for="Subject" class="form-control rounded-pill p-3" placeholder="Subject" />
            <span asp-validation-for="Subject" class="text-danger small"></span>
        </div>
        <div class="mb-3">
            <textarea asp-for="Message" class="form-control rounded-4 p-3" rows="5" placeholder="Message"></textarea>
            <span asp-validation-for="Message" class="text-danger small"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn px-5 py-2 rounded-pill" style="background-color:#3a3a3a; color:#fff;">
                SEND MESSAGE
            </button>
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3 text-center">@ViewBag.Message</div>
        }
    </form>
</section>

<!-- Google Map -->
