@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model Gallery_Art_System.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In / Create Account</title>
    <link rel="stylesheet" href="~/css/home/login.css" />
</head>
<body>
    <div class="auth-page">
        <div class="auth-page-container">
            <!-- Sign In -->
            <div class="auth-page-section auth-page-signin">
                <h2 class="auth-page-title">Sign In</h2>
                <form asp-controller="User" asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                    <label class="auth-page-label">UserName</label>
                    <input type="text" asp-for="Username" class="auth-page-input" placeholder="Enter your email" required />

                    <label class="auth-page-label">Email</label>
                    <input type="email" asp-for="Email" class="auth-page-input" placeholder="Enter your email" required />

                    <label class="auth-page-label">Password</label>
                    <input type="password" asp-for="Password" class="auth-page-input" placeholder="Enter your password" required />
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="text-danger" style="color: red; font-weight: bold;margin-top:20px">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    <div class="auth-page-footer">
                        <button type="submit" class="auth-page-btn">LOG IN</button>
                    </div>
                    
                </form>
            </div>

            <!-- Create Account -->
            <div class="auth-page-section auth-page-create">
                <h2 class="auth-page-title">Create An Account</h2>
                <form asp-controller="User" asp-action="Register" method="post">                   
                    <div class="auth-page-row">
                        <div class="auth-page-col">
                            <label class="auth-page-label">User Name</label>
                            <input type="text" asp-for="Username" class="auth-page-input" placeholder="User Name" required />
                        </div>
                        <div class="auth-page-col">
                            <label class="auth-page-label">Full Name</label>
                            <input type="text" asp-for="FullName" class="auth-page-input" placeholder="Full Name" required />
                        </div>
                    </div>

                    <label class="auth-page-label">Email</label>
                    <input type="email" asp-for="Email" class="auth-page-input" placeholder="Email" required />

                    <label class="auth-page-label">Address</label>
                    <input type="text" asp-for="Address" class="auth-page-input" placeholder="Address" required />

                    <label class="auth-page-label">Mobile Phone</label>
                    <div class="auth-page-phone">
                        <input type="text" asp-for="Phone" class="auth-page-input" placeholder="Mobile number" />
                    </div>

                    <div class="auth-page-row">
                        <div class="auth-page-col">
                            <label class="auth-page-label">Gender</label>
                            <select asp-for="Gender" class="auth-page-input" required>
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <div class="auth-page-col">
                            <label class="auth-page-label">Age</label>
                            <input type="number" asp-for="Age" class="auth-page-input" placeholder="Enter your age" min="1" max="120" required />
                        </div>
                    </div>

                    <label class="auth-page-label">
                        Password <span class="auth-page-note-inline">(must be 5 characters)</span>
                    </label>
                    <input type="password" asp-for="Password" class="auth-page-input" placeholder="Password" required />

                    <button type="submit" class="auth-page-btn">SAVE & CONTINUE</button>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <p style="color: green;">@TempData["SuccessMessage"]</p>
                    }
                </form>
            </div>

        </div>
    </div>
</body>
</html>
