@model IEnumerable<Gallery_Art_System.Models.Artwork>
@{
    ViewData["Title"] = "Home Page";
}
<div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">

    <!-- Dấu chấm điều hướng -->
    <div class="carousel-indicators">
        @{
            var banners = ViewBag.Banners as List<Gallery_Art_System.Models.Banner>;
            int count = banners?.Count ?? 0;
        }
        @for (int i = 0; i < count; i++)
        {
            <button type="button"
                    data-bs-target="#bannerCarousel"
                    data-bs-slide-to="@i"
                    class="@(i == 0 ? "active" : "")"
                    aria-current="@(i == 0 ? "true" : "false")"
                    aria-label="Slide @(i + 1)">
            </button>
        }
    </div>

    <!-- Các ảnh banner -->
    <div class="carousel-inner">
        @{
            int index = 0;
        }
        @foreach (var bn in ViewBag.Banners)
        {
            var activeClass = index == 0 ? "active" : "";
            <div class="carousel-item @activeClass">
                <img src="@bn.Image" alt="Banner @index" class="d-block w-100 banner-img">
            </div>
            index++;
        }
    </div>

    <!-- Nút điều hướng -->
    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="text-center" style="background-color: #f7f6ed;">
    <div class="about-us">
        <div class="container hero-content">
            @foreach (var cf in ViewBag.Config)
            {
                <div class="hero-text">
                    <h1>
                        @Html.Raw(cf.Title)
                    </h1>
                    <p>
                        @Html.Raw(cf.Description)
                    </p>
                    <a href="#" class="hero-btn">
                        More About
                        <span><i class="fa-solid fa-arrow-right"></i></span>
                    </a>
                </div>
            }
        </div>

    </div>

    <section class="exhibitions-section">
        <div class="container">
            <div class="header">
                <h2>Upcoming Exhibitions</h2>
                <a asp-controller="Home" asp-action="Exhibition" class="view-all">
                    View All Exhibitions <span>→</span>
                </a>
            </div>
            <hr class="divider" />

            <div class="main-image">
                <img src="~/images/homes/img3.jpg" alt="Exhibition main" />
            </div>
            @foreach (var ex in ViewBag.Exhibitions)
            {
                <div class="exhibition-list">
                    <div class="exhibition-item">
                        <div class="info">
                            <h3>@ex.Name<br>@ex.Location</h3>
                            <p class="date">@ex.StartDate – @ex.EndDate</p>
                        </div>
                        <div class="desc">
                            <p>
                                @Html.Raw(
                                (ex.Description ?? "")
                                .Replace("<br>", "\n")
                                .Replace("<br/>", "\n")
                                .Replace("<br />", "\n")
                                .Substring(0, Math.Min((ex.Description ?? "").Length, 150))
                                .Replace("\n", "<br>") + ((ex.Description?.Length ?? 0) > 150 ? "..." : "")
                                                        )
                        </p>
                        </div>
                        <div class="action">
                            <a href="#" class="btn-more">More Info</a>
                        </div>
                    </div>

                </div>
            }
        </div>
    </section>


    <section class="collection-section">
        <div class="container">
            <div class="header">
                <h2>Artwork</h2>
                <a asp-controller="Home" asp-action="artwork" class="view-all">
                    View All Artwork <span>→</span>
                </a>
            </div>
            <hr class="divider" />

            <p class="intro">
                Our artwork currently contains more than 100,000 works of art and design
                dating from ancient times to today.
            </p>

            <div class="artwork-grid">
                @foreach (var art in Model)
                {
                    <div class="artwork-item">
                        <img src="@art.ImageUrl" alt="@art.Title" />
                        <h3>@art.Title</h3>
                        <p class="artist">@art.Artist</p>
                    </div>
                }
            </div>

            
        </div>
    </section>
    <section class="newsletter-section">
        <div class="overlay">
            <div class="newsletter-content text-center">
                <h2 class="newsletter-title">Newsletter</h2>
                <p class="newsletter-subtitle">
                    Receive e-mail updates on our exhibitions,<br />
                    events, and more:
                </p>

                <form class="newsletter-form">
                    <input type="email"
                           placeholder="Email Address"
                           required
                           class="newsletter-input" />
                    <button type="submit" class="newsletter-btn">
                        <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </form>

                <div class="agree-check">
                    <input type="checkbox" id="agree" />
                    <label for="agree">
                        I agree that my submitted data is being collected and stored.
                    </label>
                </div>
            </div>
        </div>
    </section>

