@model Gallery_Art_System.Models.Exhibition
@{
    Layout = "AdminMaster";
    ViewData["Title"] = "Thêm Triển lãm";
}

<div class="container mt-4">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black">Thêm triển lãm</h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Exhibition" asp-action="Index">
                        Back
                        <i class='fas'>&#xf3e5;</i>
                    </a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="" class="form-label fw-bold">Tên triển lãm</label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col">
                <label for="" class="form-label fw-bold">Địa điểm</label>
                <input type="t" class="form-control" asp-for="Location">
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div for="" class="form-label fw-bold">
                    <label>Ngày bắt đầu</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
            </div>
            <div class="col">
                <div for="" class="form-label fw-bold">
                    <label>Ngày kết thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label asp-for="ImageUrl" class="form-label fw-bold">Image</label>
                <!-- input text để elfinder ghi đường dẫn -->
                <input asp-for="ImageUrl" class="form-label" id="Image" />
                <button type="button" id="btnBrowse">Chọn ảnh</button>
                <div class="mt-2">
                    <img src="@Model.ImageUrl" id="PictureView" width="100px" />
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        </br>

        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="Exhibition" asp-action="Index">
                        Back
                        <i class='fas'>&#xf3e5;</i>
                    </a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/elfinder/js/elfinder.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Khởi tạo CKEditor cho textarea Description
            if ($('#Description').length > 0) {
                CKEDITOR.replace('Description', {
                    language: 'vi',
                    removePlugins: 'sourcearea', // nếu muốn bỏ nút source
                });
            }

            // elFinder browse button
            if ($('#btnBrowse').length > 0) {
                $('#btnBrowse').click(function () {
                    var fm = $('<div id="elfinder" />').dialogelfinder({
                        url: '/quan-ly-tep-tin/connector',
                        baseUrl: "/elfinder/",
                        width: 840,
                        height: 450,
                        destroyOnClose: true,
                        title: 'Quản lý tệp tin',
                        getFileCallback: function (files, fm) {
                            $('#Image').val('/' + files[0].path);
                            $('#PictureView').attr('src', '/' + files[0].path);
                        },
                        commandsOptions: {
                            getfile: {
                                multiple: true,
                                oncomplete: 'close',
                                folders: false
                            }
                        }
                    }).dialogelfinder('instance');
                });
            }
        });
    </script>
}
