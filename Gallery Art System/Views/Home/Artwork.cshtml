@model IEnumerable<Gallery_Art_System.Models.Artwork>
@{
    ViewData["Title"] = "Artwork";
}
<div class="banner-art">
    <h1>Artworks</h1>
    <p><a href="/">Home </a>/<a asp-controller="Home" asp-action="Artwork"> Artworks</a></p>
</div>
<div class="container art-content">
    <aside class="art-filter">

        <!-- FILTER SECTION -->
        <div class="filter-box">
            <h4>Filter</h4>
            <form method="get" asp-controller="Home" asp-action="Artwork">
                <div class="price-range">
                    <input type="range" name="maxPrice" min="500000" max="5000000" step="10" value="@ViewBag.MaxPrice ?? 5000000" id="priceRange">
                    <p>Up to $<span id="priceValue">@ViewBag.MaxPrice?? 5000000</span></p>
                    <button type="submit" class="filter-btn">Filter</button>
                </div>
            </form>
        </div>

        <!-- CATEGORIES SECTION -->
        <div class="categories-box">
            <h4>Categories</h4>
            <ul class="category-list">
                @if (ViewBag.CategoryList != null)
                {
                    foreach (var category in ViewBag.CategoryList)
                    {
                        <li>
                            <span class="dash"></span><a asp-action="Artwork" asp-controller="Home" asp-route-categoryId="@category.CategoryId">@category.Name.ToUpper()</a>
                        </li>
                    }
                }
                else
                {
                    <li><em>No categories found.</em></li>
                }
            </ul>
        </div>

    </aside>

    <section class="art-list-section">
        <div class="art-header">
            <div class="results-info">
                <i class="bi bi-grid-3x3-gap me-2"></i> Showing 1–8 of 24 results
            </div>
            <div class="sort-dropdown">
                <select>
                    <option>Sort by latest</option>
                    <option>Sort by price: low to high</option>
                    <option>Sort by price: high to low</option>
                </select>
            </div>
        </div>

        <div class="art-grid">
            @foreach( var art in Model){

            <div class="art-item">
                    <div class="art-img-wrapper">
                        <!-- Icon heart -->
                        <span class="heart-icon"><i class="fa-regular fa-heart"></i></span>

                        <a asp-action="DetailArtwork" asp-controller="Home" asp-route-id="@art.ArtworkId">
                            <img src="@art.ImageUrl" alt="@art.Title" />
                        </a>

                        <!-- overlay xuất hiện khi hover -->
                        <div class="art-overlay">
                            <a href="javascript:void(0)" onclick="addToCart(@art.ArtworkId)">Add to Cart</a>
                        </div>
                    </div>

                <div class="art-info">
                        <p class="category">@art.Category?.Name</p>
                        <span style="text-align:right;"><i class="fa-regular fa-heart"></i></span>
                    <a asp-action="DetailArtwork" asp-controller="Home" asp-route-id="@art.ArtworkId"><h3 class="art-title">@art.Title</h3></a>
                    <p class="price">
                    <span class="new-price">$ @art.Price?.ToString("N2")</span>
                    </p>
                </div>
            </div>

            }
        </div>
    <!-- Pagination -->
    <div class="pagination">
        <nav class="pagination-container">
            <ul class="pagination">
                @if (Model is X.PagedList.IPagedList<Gallery_Art_System.Models.Exhibition> pagedList)
                {
                    <!-- Nút Prev -->
                    <li class="page-item @(pagedList.HasPreviousPage ? "" : "disabled")">
                        <a href="@(pagedList.HasPreviousPage? Url.Action("Exhibition", new { page = pagedList.PageNumber - 1, query = ViewBag.Query }) : "#")" class="page-link">
                            « Prev
                        </a>
                    </li>

                    <!-- Danh sách số trang -->
                    @for (int i = 1; i <= pagedList.PageCount; i++)
                    {
                        <li class="page-item @(i == pagedList.PageNumber ? "active" : "")">
                            <a href="@Url.Action("Exhibition", new { page = i, query = ViewBag.Query })" class="page-link">@i</a>
                        </li>
                    }

                    <!-- Nút Next -->
                    <li class="page-item @(pagedList.HasNextPage ? "" : "disabled")">
                        <a href="@(pagedList.HasNextPage? Url.Action("Exhibition", new { page = pagedList.PageNumber + 1, query = ViewBag.Query }) : "#")" class="page-link">
                            Next »
                        </a>
                    </li>
                }
                else
                {
                    <!-- Nếu model không có phân trang -->
                    <li class="page-item active">
                        <a href="#" class="page-link">1</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
    </section>
</div>
<script>
    const rangeInput = document.getElementById('priceRange');
    const priceValue = document.getElementById('priceValue');
    rangeInput.addEventListener('input', function () {
        priceValue.textContent = this.value;
    });
</script>
@section Scripts {
    <script>
        function addToCart(artworkId) {
            $.post('/Cart/AddToCart', { artworkId: artworkId }, function (res) {
                if (res.count !== undefined) {
                    $('#cartCount').text(res.count);
                }
            });
        }
        $(document).ready(function () {
            refreshCartCount();
        });
                function addToCart(artworkId) {
            fetch(`/Cart/AddToCart?artworkId=${artworkId}`, { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    // Cập nhật số lượng
                    const cartCount = document.getElementById('cartCount');
                    if(cartCount) cartCount.textContent = data.count;

                    // Rung icon giỏ hàng
                    const cartIcon = document.getElementById('cartIcon');
                    cartIcon.classList.add('shake');
                    setTimeout(() => cartIcon.classList.remove('shake'), 500);
                })
                .catch(err => console.error(err));
        }

    </script>

}

