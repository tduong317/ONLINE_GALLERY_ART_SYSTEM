@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@model Gallery_Art_System.Models.Banner

<div class="container">
    <form asp-action="Edit" asp-controller="Banner" method="post" enctype="multipart/form-data" class="bg-light p-4 rounded-4 shadow-sm mt-3">
        <div class="mb-4 border-bottom pb-2 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-primary mb-0">
                <i class="fas fa-edit me-2 text-success"></i> Edit Banner
            </h4>
            <div>
                <a class="btn btn-outline-secondary me-2" asp-controller="Banner" asp-action="Index">
                    <i class='fas fa-arrow-left'></i> Back
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </div>

        <input type="hidden" asp-for="Id" />

        <!-- Image Upload -->
        <div class="mb-4">
            <label asp-for="Image" class="form-label fw-semibold text-dark">Hình ảnh</label>
            <div class="input-group">
                <input asp-for="Image" class="form-control shadow-sm" id="Image" placeholder="Chọn hoặc nhập đường dẫn ảnh..." />
                <button type="button" id="btnBrowse" class="btn btn-outline-primary">
                    <i class="fas fa-folder-open"></i> Chọn ảnh
                </button>
            </div>
            <span asp-validation-for="Image" class="text-danger small"></span>

            <div class="text-center mt-3">
                <div class="p-2 bg-white border rounded-4 shadow-sm d-inline-block">
                    <img src="@Model.Image" id="PictureView" class="rounded-3" style="max-width: 200px; display:@(string.IsNullOrEmpty(Model.Image) ? "none" : "inline-block"); transition: all 0.3s ease;" />
                    <div id="previewPlaceholder" class="text-muted small" style="@(string.IsNullOrEmpty(Model.Image) ? "" : "display:none;")">
                        Chưa có ảnh được chọn
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Checkbox -->
        <div class="mb-3 form-check">
            <label asp-for="Status" class="form-check-label fw-semibold text-dark">Hoạt động</label>
            <input type="checkbox" asp-for="Status" class="form-check-input" />
        </div>

        <!-- Bottom Buttons -->
        <div class="d-flex justify-content-end border-top pt-3 mt-4">
            <a class="btn btn-outline-secondary me-2" asp-controller="Banner" asp-action="Index">
                <i class='fas fa-arrow-left'></i> Back
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </form>

</div>
@section Scripts {
    <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/elfinder/js/elfinder.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#btnBrowse') != undefined) {
                $('#btnBrowse').click(function () {
                    var fm = $('<div id="elfinder" />').dialogelfinder({
                        url: '/quan-ly-tep-tin/connector',
                        baseUrl: "/elfinder/",
                        width: 840,
                        height: 450,
                        destroyOnClose: true,
                        title: 'Quản lý tệp tin',
                        getFileCallback: function (files, fm) {
                            $('#Image').val('/' + files[0].path);
                            $('#PictureView').attr('src', '/' + files[0].path);
                        },
                        commandsOptions: {
                            getfile: {
                                multiple: true,
                                oncomplete: 'close',
                                folders: false
                            }
                        }
                    }).dialogelfinder('instance');
                })
            }
        });
    </script>

}


