@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@model Gallery_Art_System.Models.User

<div class="container">
    <form asp-action="Edit" asp-controller="User" method="post" enctype="multipart/form-data">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black">Edit User</h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="User" asp-action="Index">
                        Back
                        <i class='fas'>&#xf3e5;</i>
                    </a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="UserId" />
        <div class="row">
            <div class="col">
                <label class="form-label fw-bold">UserName</label>
                <input type="text" class="form-control" asp-for="Username" />
            </div>
            <div class="col">
                <label class="form-label fw-bold">FullName</label>
                <input type="text" class="form-control" asp-for="FullName" />
            </div>
            <div class="col">
                <label class="form-label fw-bold">Password</label>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label class="form-label fw-bold">Address</label>
                <input type="text" class="form-control" asp-for="Address" />
            </div>
            <div class="col">
                <label class="form-label fw-bold">Email</label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <div class="col">
                <label class="form-label fw-bold">Phone</label>
                <input type="text" class="form-control" asp-for="Phone" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label asp-for="Age" class="form-label fw-bold"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Gender" class="form-label fw-bold"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option value="Nam">Male</option>
                    <option value="Nữ">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label asp-for="Avatar" class="form-label fw-bold">Avatar</label>
                <!-- input text để elfinder ghi đường dẫn -->
                <input asp-for="Avatar" class="form-label fw-bold" id="Image" />
                <button type="button" id="btnBrowse">Select Avatar</button>
                <div class="mt-2">
                    <img src="@Model.Avatar" id="PictureView" width="100px" />
                </div>
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>
        </div>
        </br>
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2 style="color:black"></h2>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary" asp-controller="User" asp-action="Index">
                        Back
                        <i class='fas'>&#xf3e5;</i>
                    </a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/elfinder/js/elfinder.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#btnBrowse') != undefined) {
                $('#btnBrowse').click(function () {
                    var fm = $('<div id="elfinder" />').dialogelfinder({
                        url: '/quan-ly-tep-tin/connector',
                        baseUrl: "/elfinder/",
                        width: 840,
                        height: 450,
                        destroyOnClose: true,
                        title: 'Quản lý tệp tin',
                        getFileCallback: function (files, fm) {
                            $('#Avatar').val('/' + files[0].path);
                            $('#PictureView').attr('src', '/' + files[0].path);
                        },
                        commandsOptions: {
                            getfile: {
                                multiple: true,
                                oncomplete: 'close',
                                folders: false
                            }
                        }
                    }).dialogelfinder('instance');
                })
            }
        });
    </script>

}




