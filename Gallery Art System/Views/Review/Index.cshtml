@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Gallery_Art_System.Models.Review>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpCTA
@{
    Layout = "AdminMaster";
}
@{
    ViewData["Title"] = "Review";
}

<div class="container-fluid">
    <h4>Review <b>Managemnet</b></h4>
    <div class="table-wrapper" style="text-align:center;">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <a asp-controller="Review" asp-action="Create" class="btn btn-success" data-toggle="modal">
                        <i class="material-icons">&#xE147;</i>
                        <span>Add</span>
                    </a>
                    <a asp-controller="Review" asp-action="DeleteAll" class="btn btn-danger" data-toggle="modal" onclick="return confirm('Bạn có chắc muốn xóa không?');">
                        <i class="material-icons">&#xE5C9;</i>
                        <span>Delete</span>
                    </a>
                    <a asp-controller="Review" asp-action="" class="btn btn-primary" data-toggle="modal">
                        <i class="fa-solid fa-arrows-rotate"></i>
                        <span>Refresh</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-hover table-bordered">
            <thead class="table-success">
                <tr>
                    <th>
                        <span class="custom-checkbox">
                            <!-- "Select All" checkbox -->
                            <input type="checkbox" id="selectAll" />
                            <label for="selectAll"></label>
                        </span>
                    </th>
                    <th>Artwork/ Exhibition</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Rating</th>
                    <th>Comment</th>
                    <th>Function</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>
                            <span class="custom-checkbox">
                                <!-- Individual checkboxes -->
                                <input type="checkbox" class="checkboxItem" id="checkbox_@review.ReviewId" name="options[]" value="@review.ReviewId" />
                                <label for="checkbox_@review.ReviewId"></label>
                            </span>
                        </td>
                        <td>
                            @if (review.Artwork != null)
                            {
                                <img src="@review.Artwork.ImageUrl" alt="@review.Artwork.Title" style="width:80px; height:auto;" />
                            }
                            else if (review.Exhibition != null)
                            {
                                <img src="@review.Exhibition.ImageUrl" alt="@review.Exhibition.Name" style="width:80px; height:auto;" />
                            }
                            else
                            {
                                <span>No image</span>
                            }
                        </td>
                        <td>@review.Name</td>
                        <td>@review.Email</td>
                        <td>@review.Rating <i class="fa fa-star text-warning"></i></td>
                        <td>@Html.Raw(review.Comment)</td>
                        <td>
                            <a asp-controller="Review" asp-action="Edit" asp-route-id="@review.ReviewId" class="edit" data-toggle="modal">
                                <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                            </a>
                            <a asp-controller="Review" asp-action="Delete" asp-route-id="@review.ReviewId" class="delete" data-toggle="modal">
                                <i class="material-icons" data-toggle="tooltip" title="Delete" onclick="return confirm('Are you sure?');">&#xE872;</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Phân Trang -->
        <div class="clearfix">
            <ul class="pagination">
                <li class="page-item">@Html.PagedListPager(Model, pageList => Url.Action("Index", "Admin", new { pageNumber = pageList }))</li>
            </ul>
        </div>
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <a asp-controller="Review" asp-action="Create" class="btn btn-success" data-toggle="modal">
                        <i class="material-icons">&#xE147;</i>
                        <span>Add</span>
                    </a>
                    <a asp-controller="Review" asp-action="DeleteAll" class="btn btn-danger" data-toggle="modal" onclick="return confirm('Bạn có chắc muốn xóa không?');">
                        <i class="material-icons">&#xE5C9;</i>
                        <span>Delete</span>
                    </a>
                    <a asp-controller="Review" asp-action="" class="btn btn-primary" data-toggle="modal">
                        <i class="fa-solid fa-arrows-rotate"></i>
                        <span>Refresh</span>
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
