@model Gallery_Art_System.Models.ExhibitionRequest
@{
    Layout = "AdminMaster";
    ViewData["Title"] = "Add Exhibition Request";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add Exhibition Request</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btn-primary" asp-controller="ExhibitionRequest" asp-action="Index">
                        Back
                        <i class='fas'>&#xf3e5;</i>
                    </a>
                </div>
                <!-- Người gửi -->
                <div class="mb-3">
                    <label asp-for="UserId" class="form-label fw-semibold">Sender</label>
                    <select asp-for="UserId" class="form-select"
                            asp-items="@(ViewBag.Users != null ? new SelectList(ViewBag.Users, "UserId", "FullName") : new SelectList(Enumerable.Empty<User>()))">
                        <option value="">-- Select Sender --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Tác phẩm -->
                <div class="mb-3">
                    <label asp-for="ArtworkId" class="form-label fw-semibold">Artwork</label>
                    <select asp-for="ArtworkId" class="form-select"
                            asp-items="@(ViewBag.Artworks != null ? new SelectList(ViewBag.Artworks, "ArtworkId", "Title") : new SelectList(Enumerable.Empty<Artwork>()))">
                        <option value="">-- Select Artwork --</option>
                    </select>
                    <span asp-validation-for="ArtworkId" class="text-danger"></span>
                </div>

                <!-- Triển lãm -->
                <div class="mb-3">
                    <label asp-for="ExhibitionId" class="form-label fw-semibold">Exhibition</label>
                    <select asp-for="ExhibitionId" class="form-select"
                            asp-items="@(ViewBag.Exhibitions != null ? new SelectList(ViewBag.Exhibitions, "ExhibitionId", "Name") : new SelectList(Enumerable.Empty<Exhibition>()))">
                        <option value="">-- Select Exhibition --</option>
                    </select>
                    <span asp-validation-for="ExhibitionId" class="text-danger"></span>
                </div>

                <!-- Trạng thái -->
                <div class="mb-3 form-check">
                    <input type="checkbox" name="Status" value="true" class="form-check-input" @(Model.Status == true ? "checked" : "") />
                    <label class="form-check-label">Active</label>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Save
                    </button>
                    
                </div>
            </form>
        </div>
    </div>
</div>
